@model InvoiceRegisterClient.Models.ClientViewModel

@{
ViewData["Title"] = "Edit Client";
}

<h2>Edit client</h2>

<hr /> @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form method="post">
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "mb-3 col-sm-1" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control mb-3 mr-sm-2" } })
    </div>

    <button type="submit" class="btn btn-primary mb-3" asp-route="save">Save</button>
</form>
